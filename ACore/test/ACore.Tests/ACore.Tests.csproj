	</ItemGroup>

	<ItemGroup>
		<None Update="appsettings.Test.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Remove="ServerT\DbT\TestDBContext\Scripts\MSSQL\**" />
