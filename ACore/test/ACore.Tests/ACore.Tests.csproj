	  </EmbeddedResource>
	  <EmbeddedResource Update="ServerT\LocalizeT\ResX\TestClient.resx">
	    <Generator>PublicResXFileCodeGenerator</Generator>
	    <LastGenOutput>TestClient.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
